/* --- General / Mobile-first Carousel Styles --- */

/* --- Mobile layout adjustments --- */
@media (max-width: 768px) {
  .pc-carousel-wrapper {
    width: 100vw !important;
    margin-left: calc(50% - 50vw) !important;
    padding: 0 !important;
  }

  .pc-slide img {
    max-height: 70vh;
  }

.pc-carousel-wrapper {
  position: relative;
  padding: 0;
  overflow: hidden;
  height: auto;
  max-width: none !important;
  margin: 0 auto;
  box-sizing: border-box;
}

/* Ensure gallery column doesnâ€™t limit width */
.product-detail .product-image,
.product-detail .product-image-gallery,
.pc-carousel-wrapper {
  max-width: none !important;
  padding: 0 !important;
  margin: 0 auto !important;
}

/* Track / slide layout */
.pc-track {
  display: flex;
  transition: transform 300ms ease;
  will-change: transform;
  overflow: hidden;
}
.pc-track > .pc-slide {
  flex: 0 0 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  min-width: 100%;
  box-sizing: border-box;
  height: 500px;
}

/* Dots below image */
.pc-dots {
  display: flex;
  justify-content: center;
  gap: 8px;
  padding: 12px 0;
  position: static;
  background: transparent;
  z-index: 2;
}

/* Dot styles */
.pc-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  border: none;
  background: rgba(0, 0, 0, 0.2);
  cursor: pointer;
}
.pc-dot.active {
  background: rgba(0, 0, 0, 0.8);
}

/* Hide default theme/gallery arrows when wrapper is active */
.pc-carousel-wrapper .product-image-gallery__button,
.pc-carousel-wrapper .gallery-navigation,
.pc-carousel-wrapper button:not(.pc-dot) {
  display: none !important;
}

/* Custom arrows (if you use them) */
.pc-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  border: none;
  background: transparent;
  font-size: 28px;
  cursor: pointer;
  padding: 8px;
  z-index: 4;
}
.pc-left { left: 8px; }
.pc-right { right: 8px; }

/* Image sizing: fill slide */
.pc-slide img {
  max-width: none;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* --- Thumbnails as dots --- */

.gallery-slider-thumbnails-controls {
  display: none !important;
}

.gallery-slider-thumbnails {
  display: flex !important;
  justify-content: center;
  gap: 8px;
  padding: 15px 0;
}

.gallery-slider-thumbnails-item {
  width: 10px !important;
  height: 10px !important;
  border-radius: 50%;
  border: 1px solid rgba(0, 0, 0, 0.3);
  background: transparent !important;
  padding: 0 !important;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.gallery-slider-thumbnails-item img {
  display: none;
}

.gallery-slider-thumbnails-item.tns-nav-active {
  background-color: rgba(0, 0, 0, 0.8) !important;
  border-color: rgba(0, 0, 0, 0.8);
}

/* --- General image sizing --- */
.gallery-slider-item {
  flex: 0 0 100% !important;
  overflow: hidden;
  aspect-ratio: 1 / 1;
  background-color: #f8f8f8;
}

.gallery-slider-item img.gallery-slider-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transform: scale(1.03);
}

/* --- Hide default arrows --- */
.base-slider .gallery-slider-controls {
  display: none !important;
}

/* Debug outline (optional) */
.product-detail-media.debug-outline {
  outline: 3px dashed rgba(255, 0, 0, 0.6) !important;
}

/* --- Balanced lightbox size & layout --- */
.image-zoom-modal,
.image-zoom-modal .modal-dialog,
.image-zoom-modal .modal-content {
  width: 100vw !important;
  height: 100vh !important;
  max-width: 100vw !important;
  max-height: 100vh !important;
  margin: 0 !important;
  padding: 40px !important; /* add soft space around the image */
  background: rgba(0, 0, 0, 0.95) !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-sizing: border-box !important;
}

/* Image stays large but not overflowing */
.image-zoom-modal img,
.image-zoom-modal .gallery-slider-item img,
.image-zoom-modal .gallery-slider-image {
  max-width: 90vw !important;
  max-height: 85vh !important;
  width: auto !important;
  height: auto !important;
  object-fit: contain !important;
  transform: none !important;
  margin: auto !important;
  display: block !important;
  border-radius: 8px; /* subtle rounding for elegance */
}

/* Hide scrollbars/padding inside modal body */
.image-zoom-modal .modal-body {
  padding: 0 !important;
  overflow: hidden !important;
}

/* Optional fade-in animation */
.image-zoom-modal {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}


}


/* --- Responsive visibility control --- */
.hidden-desktop {
  display: block;
}

.hidden-mobile {
  display: none;
}

/* Hide desktop gallery on larger screens */
@media (min-width: 769px) {
  .hidden-desktop {
    display: none !important;
  }

  .hidden-mobile {
    display: block !important;
  }
}

